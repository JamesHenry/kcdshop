{
  "name": "kcdshop",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "patch-package --patch-dir other/patches",
    "typecheck": "tsc -b",
    "lint": "eslint .",
    "build": "nx run-many --target build",
    "prestart": "npm run build -s",
    "go": "cross-env NODE_ENV=development KCDSHOP_CONTEXT_CWD=$PWD/packages/example tsx watch $@",
    "start": "cross-env NODE_ENV=production npm -w example run start",
    "dev": "npm -w example run start",
    "test": "playwright test",
    "format": "npm run format --workspaces --if-present",
    "validate": "npm-run-all --parallel --print-label --print-name --continue-on-error typecheck lint test"
  },
  "author": "Kent C. Dodds <me@kentcdodds.com> (https://kentcdodds.com/)",
  "license": "GPL-3.0-only",
  "workspaces": [
    "packages/*",
    "packages/example/exercises/*/*",
    "packages/example/examples/*"
  ],
  "dependencies": {
    "@nx/devkit": "^18.0.4",
    "@nx/js": "^18.0.4",
    "@playwright/test": "^1.39.0",
    "@types/yargs": "^17.0.32",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint-config-prettier": "^9.0.0",
    "globby": "^11.1.0",
    "lru-cache": "^10.0.1",
    "npm-run-all": "^4.1.5",
    "nx": "^18.0.4",
    "patch-package": "^8.0.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "tsx": "^4.7.0",
    "yargs": "^17.7.2"
  },
  "nx": {
    "includedScripts": ["lint", "typecheck"]
  },
  "devDependencies": {
    "verdaccio": "^5.0.4"
  }
}
